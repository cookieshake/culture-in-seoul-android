<!-- 카드 레이아웃 -->
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="0dp"
    android:layout_marginTop="12.5dp"
    android:background="@android:color/transparent">

    <!-- 카드 내용과 하단 메뉴 포함 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/transparent">

        <!-- 카드 내용 및 사진 부분 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="17.5dp"
            android:background="#ffffff">

            <!-- 카드 내용 부분 -->
            <LinearLayout
                android:id="@+id/card_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/card_codename"
                        android:textColor="#3e3e3e"
                        android:textSize="12dp"
                        android:text="행사의 유형" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/card_title"
                        android:textColor="#000000"
                        android:layout_below="@id/card_codename"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.SearchResult.Title"
                        android:text="행사의 제목" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/card_title"
                        android:id="@+id/card_place"
                        android:textColor="#3e3e3e"
                        android:textSize="15dp"
                        android:text="행사의 장소" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/card_like"
                        android:textColor="#3e3e3e"
                        android:id="@+id/card_date"
                        android:textSize="15dp"
                        android:text="행사의 날짜" />


                </LinearLayout>

            </LinearLayout>

            <!-- 사진 부분 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/card_image"
                    android:src="@drawable/noimage"
                    android:scaleType="centerInside" />
            </LinearLayout>
        </LinearLayout>

        <!-- 하단메뉴 부분, 스크롤 되는 부분이 상단과 겹치지 않게 함 -->
        <FrameLayout
            android:id="@+id/card_bottomMenuBackground"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/card_bottomMenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:background="#fe5722"
                    android:text="상세보기" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#fff" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:background="#fe5722"
                    android:text="찜하기" />

            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>